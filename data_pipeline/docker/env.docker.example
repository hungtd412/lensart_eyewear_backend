# ============================================
# LensArt Data Pipeline - Docker Environment Variables
# Copy this file to .env.docker and customize as needed
# ============================================

# ============================================
# Kafka Configuration
# ============================================
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:29092,PLAINTEXT_HOST://localhost:9092
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true
KAFKA_LOG_RETENTION_HOURS=168
KAFKA_NUM_PARTITIONS=3

# ============================================
# Zookeeper Configuration
# ============================================
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lensart_events
POSTGRES_PORT=5432

# ============================================
# PgAdmin Configuration
# ============================================
PGADMIN_DEFAULT_EMAIL=admin@lensart.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_LISTEN_PORT=80

# ============================================
# Flink Configuration
# ============================================
FLINK_JOBMANAGER_RPC_ADDRESS=flink-jobmanager
FLINK_TASKMANAGER_SLOTS=4
FLINK_TASKMANAGER_MEMORY=2048m
FLINK_PARALLELISM_DEFAULT=2

# ============================================
# Application Configuration
# ============================================
APP_NAME=lensart-data-pipeline
APP_ENV=local
APP_DEBUG=true

# ============================================
# Network Configuration
# ============================================
DOCKER_NETWORK=lensart-network

# ============================================
# Volume Names
# ============================================
VOLUME_KAFKA_DATA=lensart-kafka-data
VOLUME_POSTGRES_DATA=lensart-postgres-data
VOLUME_FLINK_CHECKPOINTS=lensart-flink-checkpoints
VOLUME_FLINK_SAVEPOINTS=lensart-flink-savepoints

